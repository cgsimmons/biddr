<h1><%= @auction.title %></h1>
by <%= @auction.user.first_name %> <%= @auction.user.last_name %><br>
Reserve Price: <%= number_to_currency(@auction.reserve_price) %>
<p><%= @auction.details %><br><br>

<% if user_signed_in? %>
  <% if can? :manage_auction, @auction %>
  <%= link_to 'edit', edit_auction_path(@auction)%>
  <%= link_to 'delete', auction_path(@auction),
                        method: :delete,
                        data: {confirm: 'Are you sure?'}%>
  <% end %>
<% end %>
<hr>
