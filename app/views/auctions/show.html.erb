<h1><%= @auction.title %></h1>
by <%= @auction.user.first_name %> <%= @auction.user.last_name %><br>
Current Price: <%= number_to_currency(@auction.current_price) %><br>

<p><%= @auction.details %><br><br>

<% if user_signed_in? %>
  <% if can? :manage_auction, @auction %>
  <%= link_to 'edit', edit_auction_path(@auction)%>
  <%= link_to 'delete', auction_path(@auction),
                        method: :delete,
                        data: {confirm: 'Are you sure?'}%>
  <% end %>
<% end %>
<% if can? :bid, @auction %>
  <div id="bid-form">
    <%= render 'bids/form' %>
  </div>
<% end %>
<h2>Previous Bids</h2>
<div id="bids">
  <% @auction.previous_bids.each do |bid| %>
    <%= render 'bids/bid', {bid: bid} %>
  <% end %>
</div>
